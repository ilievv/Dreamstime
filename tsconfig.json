{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "moduleResolution": "node",
        "sourceMap": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "noImplicitAny": true,
        "suppressImplicitAnyInexErrors": true,
        "allowSyntheticDefaultImports": true
    },
    "compileOnSave": false,
    "exclude": [
        "node_modules/*"
    ]
}